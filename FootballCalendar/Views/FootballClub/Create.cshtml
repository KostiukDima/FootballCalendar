
@model FootballСalendar.Models.FootballClubAddVM

@{
    ViewData["Title"] = "Create";
}

<h1>Додати футбольний клуб</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="custom-file form-group">
                <input type="file" class="custom-file-input" asp-for="Logo" required>
                <label class="custom-file-label" for="Logo">Choose file...</label>
                <div class="invalid-feedback">Example invalid custom file feedback</div>
            </div>

            <select asp-for="CityId" class="form-control" asp-items="Model.Cities"></select>
            <select asp-for="StadiumId" class="form-control" asp-items="Model.Stadiums"></select>
            <select asp-for="CoachId" class="form-control" asp-items="Model.Coaches"></select>
            <select asp-for="LeagueId" class="form-control" asp-items="Model.Leagues"></select>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
