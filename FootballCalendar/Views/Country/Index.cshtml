@model List<FootballСalendar.Models.CountryVM>
@{
    ViewData["Title"] = "Index";
}


@await Html.PartialAsync("/Views/Admin/_PartialViews.cshtml")

<br />

<h1>Країни</h1>

@if (Model.Count == 0)
{
    <br />
    <h3>Пусто =(</h3>
    <br />
    <br />
}
else
{


    <table class="table">
        <thead>
            <tr>
                <th>Назва країни</th>
                <th>Прапор</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    
                    <td>
                       <img src="@item.Flag" width="50" />
                    </td>
                    
                    <td>
                        <div class="btn-group d-flex justify-content-end">
                            <a class="btn btn-secondary" asp-controller="Country" asp-action="Edit" asp-route-id=@item.Id>Редагувати</a>
                            
                            <a class="btn btn-secondary" asp-controller="Country" asp-action="Delete" asp-route-id=@item.Id> Видалити</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a class="btn btn-secondary " asp-area="" asp-controller="Country" asp-action="Create">Додати країну</a>
